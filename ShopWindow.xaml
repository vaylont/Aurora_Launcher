<Window x:Class="Aurora_Launcher.ShopWindow"
        Icon="/ico.ico"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Aurora Launcher — Магазин"
        Height="600" Width="900"
        WindowStartupLocation="CenterScreen" Background="#1E1E1E">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Верхняя панель -->
        <StackPanel Orientation="Horizontal" Grid.Row="0" HorizontalAlignment="Right">
            <Button Content="👤 Профиль" Click="OpenProfile_Click" Margin="0,0,10,0"/>
        </StackPanel>

        <!-- Игры -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <ItemsControl x:Name="GameList" Margin="0,10,0,0">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <WrapPanel HorizontalAlignment="Left"/>
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>

                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Border BorderBrush="#444" BorderThickness="1" Margin="10" Padding="10" CornerRadius="5"
                Background="#2D2D30" Width="250"
                MouseLeftButtonUp="GameCard_Click" Cursor="Hand" Tag="{Binding GameId}">
                            <StackPanel Orientation="Vertical">
                                <Image Source="{Binding CoverUrl}" Width="230" Height="130" Stretch="UniformToFill" Margin="0,0,0,10"/>
                                <TextBlock Text="{Binding Title}" FontSize="16" Foreground="White" FontWeight="Bold"
                           TextAlignment="Left" Margin="0,0,0,4"/>
                                <TextBlock Text="{Binding PriceText}" FontSize="13" Foreground="LightGray"
                           TextAlignment="Left"/>
                            </StackPanel>
                        </Border>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>

            </ItemsControl>
        </ScrollViewer>
    </Grid>
</Window>
