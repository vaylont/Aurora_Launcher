<Window x:Class="Aurora_Launcher.AddGameWindow"
        Icon="/ico.ico"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Добавить игру" Height="475" Width="450" Background="#1E1E1E"
        WindowStartupLocation="CenterScreen">
    <Grid Margin="20">
        <StackPanel>
            <TextBlock Text="Название:" Foreground="White"/>
            <TextBox x:Name="TitleBox" Margin="0,5,0,10"/>

            <TextBlock Text="Описание:" Foreground="White"/>
            <TextBox x:Name="DescriptionBox" Margin="0,5,0,10" AcceptsReturn="True" Height="60"/>

            <TextBlock Text="Ссылка на скачку:" Foreground="White"/>
            <TextBox x:Name="DownloadUrlBox" Margin="0,5,0,10"/>

            <TextBlock Text="Обложка (файл или URL):" Foreground="White"/>
            <StackPanel Orientation="Horizontal">
                <TextBox x:Name="CoverBox" Width="300"/>
                <Button Content="..." Click="BrowseCover_Click" Margin="5,0,0,0"/>
            </StackPanel>

            <TextBlock Text="Цена:" Foreground="White" Margin="0,10,0,0"/>
            <TextBox x:Name="PriceBox" Margin="0,5,0,10"/>
            
            <TextBlock Text="Жанр:" Foreground="White" Margin="0,10,0,0"/>
            <ComboBox x:Name="GenreComboBox" DisplayMemberPath="Name" SelectedValuePath="GenreId" Margin="0,5,0,10"/>


            <Button Content="Добавить игру" Click="AddGame_Click"
                    Background="#007ACC" Foreground="White" FontWeight="Bold" Height="35"/>
        </StackPanel>
    </Grid>
</Window>
