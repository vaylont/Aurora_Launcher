<Window x:Class="Aurora_Launcher.RechargeWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Пополнение баланса"
        Icon="/ico.ico"
        SizeToContent="WidthAndHeight"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        Background="#1E1E1E">
    <Border Padding="50" Background="#2D2D30" CornerRadius="10">
        <StackPanel Width="500" HorizontalAlignment="Center">
            <TextBlock Text="Выберите способ оплаты" 
                       Foreground="White" FontSize="16" 
                       FontWeight="Bold" Margin="0,0,0,10" 
                       HorizontalAlignment="Center"/>

            <!-- Иконки платёжных систем -->
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,20" >
                <RadioButton x:Name="RbSystem1" Tag="system1" Margin="10,0">
                    <!--картинка -->
                    <Image Width="150" Height="100" Source="/jalfm7g6xyftc1woivu3x8p1rndmqvax.png"/>
                </RadioButton>
                <RadioButton x:Name="RbSystem2" Tag="system2" Margin="10,0">
                    <Image Width="150" Height="100" Source="/profit.webp"/>
                </RadioButton>
            </StackPanel>

            <TextBlock Text="Сумма (₽)" Foreground="White" Margin="0,0,0,5"/>
            <TextBox x:Name="TbAmount" 
                     Height="30" 
                     VerticalContentAlignment="Center"
                     Text="1"
                     Margin="0,0,0,10"/>

            <Button Content="Пополнить" Margin="0,0,0,15"
                    Height="35"
                    Background="#007ACC" Foreground="White"
                    Click="OnRecharge_Click"/>
            
            <Button Content="Отмена"
                        Height="35"
                        Background="#555"
                        Foreground="White"
                        Click="OnCancel_Click"/>
        </StackPanel>
    </Border>
</Window>
