<Window x:Class="Aurora_Launcher.DeveloperStatsWindow"
        Icon="/ico.ico"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Статистика продаж"
        SizeToContent="WidthAndHeight"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        Background="#1E1E1E">
    <Border Padding="20" Background="#2D2D30" CornerRadius="10">
        <StackPanel>

            <!-- выпадашка для админа -->
            <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                <TextBlock Text="Разработчик:" Foreground="White" VerticalAlignment="Center"/>
                <ComboBox x:Name="CbDevelopers"
                          Width="200" Margin="10,0,0,0"
                          SelectionChanged="CbDevelopers_SelectionChanged"/>
            </StackPanel>

            <!-- Таблица -->
            <DataGrid x:Name="GridStats"
                      AutoGenerateColumns="False"
                      CanUserAddRows="False"
                      IsReadOnly="True"
                      Width="500" Height="250">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Игра" Binding="{Binding Title}" Width="*"/>
                    <DataGridTextColumn Header="Продано, шт." Binding="{Binding SalesCount}" Width="80"/>
                    <DataGridTextColumn Header="Цена, ₽" Binding="{Binding Price, StringFormat=N2}" Width="80"/>
                    <DataGridTextColumn Header="Выручка, ₽" Binding="{Binding Revenue, StringFormat=N2}" Width="100"/>
                </DataGrid.Columns>
            </DataGrid>

            <!-- Итоговая строка -->
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
                <TextBlock Text="Общая выручка: " Foreground="White" FontWeight="Bold"/>
                <TextBlock x:Name="TbTotalRevenue" Foreground="LightGreen" FontWeight="Bold"/>
            </StackPanel>

            <Button Content="Закрыть"
                    Width="80" Height="30"
                    Margin="0,10,0,0"
                    HorizontalAlignment="Right"
                    Click="Close_Click"/>
        </StackPanel>
    </Border>
</Window>
