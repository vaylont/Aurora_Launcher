<Window x:Class="Aurora_Launcher.RegisterWindow"
        Icon="/ico.ico"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Регистрация" Height="390" Width="350"
        ResizeMode="NoResize" WindowStartupLocation="CenterScreen">
    <Grid Background="#1E1E1E" Margin="20">
        <Border Background="#2D2D30" CornerRadius="10" Padding="20">
            <StackPanel>
                <TextBlock Text="Регистрация" FontSize="20" FontWeight="Bold" Foreground="White" Margin="0,0,0,20" HorizontalAlignment="Center"/>

                <TextBlock Text="Логин" Foreground="White"/>
                <TextBox x:Name="LoginBox" Margin="0,5,0,10"/>

                <TextBlock Text="Пароль" Foreground="White"/>
                <PasswordBox x:Name="PasswordBox" Margin="0,5,0,10"/>

                <TextBlock Text="Повторите пароль" Foreground="White"/>
                <PasswordBox x:Name="RepeatPasswordBox" Margin="0,5,0,20"/>

                <Button Content="Зарегистрироваться" Click="Register_Click" Height="35" Background="#007ACC" Foreground="White" FontWeight="Bold"/>
                <Button Content="Уже есть аккаунт? Войти" Click="OpenLogin_Click" Margin="0,10,0,0" Background="Transparent" Foreground="#AAAAAA" BorderThickness="0"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>
