<Window x:Class="Aurora_Launcher.LoginWindow"
        Icon="/ico.ico"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Вход" Height="375" Width="500"
        ResizeMode="NoResize" WindowStartupLocation="CenterScreen">
    <Grid Background="#1E1E1E" Margin="20">
        <Border Background="#2D2D30" CornerRadius="10" Padding="20">
            <StackPanel>
                <TextBlock Text="Вход" FontSize="20" FontWeight="Bold" Foreground="White" Margin="0,0,0,20" HorizontalAlignment="Center"/>

                <TextBlock Text="Логин" Foreground="White"/>
                <TextBox x:Name="LoginBox" Margin="0,5,0,10"/>

                <TextBlock Text="Пароль" Foreground="White"/>
                <PasswordBox x:Name="PasswordBox" Margin="0,5,0,10"/>

                <CheckBox x:Name="RememberMeBox" Content="Запомнить меня" Foreground="White" Margin="0,0,0,15"/>

                <Button Content="Войти"
                        Click="Login_Click"
                        Height="35"
                        Background="#007ACC"
                        Foreground="White"
                        FontWeight="Bold"
                        Margin="0,0,0,10"/>

                <Button Content="Нет аккаунта? Зарегистрироваться"
                        Click="OpenRegister_Click"
                        Background="Transparent"
                        Foreground="#AAAAAA"
                        BorderThickness="0"
                        HorizontalAlignment="Center"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>
